{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "preserve",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "strictBindCallApply": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "types": ["vite/client", "node", "google.maps"],
    "paths": {
      "@/*": ["resources/ts/*"]
    }
  },
  "files": ["resources/ts/env.d.ts"],
  "exclude": ["node_modules/**/*"],
  "include": [
    "resources/ts/**/*.ts",
    "resources/ts/**/*.d.ts",
    "resources/ts/**/*.tsx",
    "resources/ts/**/*.vue",
    "tests/**/*.ts"
  ]
}
